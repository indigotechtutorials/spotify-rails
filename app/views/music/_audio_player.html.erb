<div class="h-20 w-full bg-gray-700 flex items-center gap-4" data-controller="audio-player" data-action="music:toggled@window->audio-player#updatePlayButton">
  <%= image_tag(song.image, class: "w-20 h-full object-cover") %>
  <p class="text-lg text-white"> <%= song.title %> </p>
  
  <%= link_to "", data: { action: "audio-player#toggle" } do %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 fill-indigo-100 hover:fill-indigo-500" data-audio-player-target="play">
      <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm14.024-.983a1.125 1.125 0 0 1 0 1.966l-5.603 3.113A1.125 1.125 0 0 1 9 15.113V8.887c0-.857.921-1.4 1.671-.983l5.603 3.113Z" clip-rule="evenodd" />
    </svg>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 fill-indigo-100 hover:fill-indigo-500 hidden" data-audio-player-target="pause">
      <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12ZM9 8.25a.75.75 0 0 0-.75.75v6c0 .414.336.75.75.75h.75a.75.75 0 0 0 .75-.75V9a.75.75 0 0 0-.75-.75H9Zm5.25 0a.75.75 0 0 0-.75.75v6c0 .414.336.75.75.75H15a.75.75 0 0 0 .75-.75V9a.75.75 0 0 0-.75-.75h-.75Z" clip-rule="evenodd" />
    </svg>
  <% end %>

  <div class="flex text-white">
    <span data-audio-player-target="currentTime"> 00:00 </span>
    /
    <span data-audio-player-target="duration"> 00:00 </span>
  </div>
  <input type="range" class="max-w-2xl w-full" data-audio-player-target="range" data-action="change->audio-player#currentTimeUpdated"/>
</div>